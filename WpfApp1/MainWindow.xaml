<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Encryptor" Height="250" Width="450">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- File path -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="btnFile" Content="File..." Width="60" Margin="0,0,10,0"
                    Click="BtnFile_Click"/>
            <TextBox x:Name="txtFile" Width="340"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Password:" Width="70"/>
            <PasswordBox x:Name="txtPassword" Width="200"/>
        </StackPanel>

        <!-- Encrypt/Decrypt -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <RadioButton x:Name="rbEncrypt" Content="Encrypt" IsChecked="True" Margin="0,0,20,0"/>
            <RadioButton x:Name="rbDecrypt" Content="Decrypt"/>
        </StackPanel>

        <!-- ProgressBar -->
        <ProgressBar x:Name="progressBar" Grid.Row="3" Height="20" Minimum="0" Maximum="100"/>

        <!-- Start/Cancel -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnStart" Content="Start" Width="80" Margin="10,0" Click="BtnStart_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Margin="10,0" Click="BtnCancel_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
