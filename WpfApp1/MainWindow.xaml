<Window x:Class="XORFileEncryptDecrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XOR File Encrypt/Decrypt" Height="400" Width="600">
    <Grid Margin="10">
        <TextBox x:Name="txtFile" Height="25" Margin="0,0,90,0" VerticalAlignment="Top"/>
        <Button Content="File..." Width="70" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Click="BtnFile_Click"/>

        <TextBox x:Name="txtPassword" Height="25" Margin="0,40,0,0" VerticalAlignment="Top"  />

        <StackPanel Orientation="Horizontal" Margin="0,80,0,0" VerticalAlignment="Top">
            <RadioButton x:Name="rbEncrypt" Content="Encrypt" IsChecked="True"/>
            <RadioButton x:Name="rbDecrypt" Content="Decrypt" Margin="20,0,0,0"/>
        </StackPanel>

        <ProgressBar x:Name="progressBar" Height="20" Margin="0,120,0,0" VerticalAlignment="Top"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,0,0">
            <Button Content="Start" Width="60" Click="BtnStart_Click"/>
            <Button Content="Cancel" Width="60" Margin="10,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
